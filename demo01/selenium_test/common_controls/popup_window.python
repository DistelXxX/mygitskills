# coding=utf-8
"""
弹窗测试
"""
# 导入相关包
from selenium import webdriver
from selenium.webdriver.common.by import By
import time

# 实例化驱动对象
driver1 = webdriver.Chrome()
driver2 = webdriver.Chrome()
driver3 = webdriver.Chrome()

# 获取网址
driver1.get("C:\code\demo01\selenium\common_controls\html\PopupWindow_alert.html")
time.sleep(2)
driver1.find_element(By.NAME,'b1').click()
time.sleep(1)
driver1.switch_to.alert.accept()#点击确定

driver2.get("C:\code\demo01\selenium\common_controls\html\PopupWindow_confirm.html")
time.sleep(2)
driver2.find_element(By.NAME,'b1').click()
driver2.switch_to.alert.accept()
# driver2.switch_to.alert.dismiss()#取消

driver3.get("C:\code\demo01\selenium\common_controls\html\PopupWindow_prompt.html")
time.sleep(2)
driver3.find_element(By.NAME,'b1').click()
driver3.switch_to.alert.send_keys("你好")
driver3.switch_to.alert.accept()
# driver3.switch_to.alert.dismiss()#取消

# # 等待3秒
time.sleep(20)
# # 退出浏览器
driver1.quit()
time.sleep(10)
driver2.quit()
time.sleep(10)
driver3.quit()